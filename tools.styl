/* 水平居中 */
center-()
  /*针对block元素*/
  .center-hori
    margin 0 auto
  .center-vert
    position relative
    top 50%
    transform translateY(-50%)
  .center-both
    position relative
    top 50%
    transform translateY(-50%)
    margin 0 auto

